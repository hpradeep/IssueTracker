<h1>Comments for issue:<%= @issue.title %></h1>
<table class="table table-inverse">
	<thead>
		<tr>
		<th>Comments</th>
		<th>Created at</th>
		<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<%@comments.each do |comment| %>
		<tr>
			<td><%=comment.comment%></td>
			<td><%=time_ago_in_words(comment.created_at)%> ago</td>
			<td><%=link_to 'Comment',new_issue_comment_path%></td>
			<td><%=link_to 'Edit',edit_issue_comment_path(@issue,comment)%></td>
			<td><%=link_to 'Destroy',issue_comment_path(@issue,comment),method: :delete,data: {confirm: "Are you sure?"}%></td>
		</tr>
		<%end%>
	</tbody>
</table>
